extends ../layout.pug

block content
	include ../../components/header/header.pug
	include ../../components/footer/footer.pug
	include ../../components/slider/slider.pug
	include ../../components/navigation/navigation.pug
	include ../../components/preloader/preloader.pug
	svg(style="width:0;height:0;position:absolute;" aria-hidden="true" focusable="false")
		linearGradient(id="strip1" x1="0%" y1="75%" x2="100%" y2="25%")
			stop(offset="0%" stop-color="#5b4fe5")
			stop(offset="100%" stop-color="#0e1014")
		linearGradient(id="strip2" x1="100%" y1="72%" x2="0%" y2="28%")
			stop(offset="0%" stop-color="#0e1014")
			stop(offset="100%" stop-color="#5b4fe5")
		linearGradient(id="strip3" x1="0%" y1="50%" x2="100%" y2="50%")
			stop(offset="0%" stop-color="#5b4fe5")
			stop(offset="100%" stop-color="#0e1014")
		linearGradient(id="strip4" x1="82%" y1="0%" x2="18%" y2="100%")
			stop(offset="0%" style="stop-color:rgb(14,16,20);stop-opacity:1")
			stop(offset="24%" style="stop-color:rgb(14,16,20);stop-opacity:1")
			stop(offset="100%" style="stop-color:rgb(91,79,229);stop-opacity:1")
		linearGradient(id="strip5" x1="0%" y1="75%" x2="100%" y2="25%")
			stop(offset="0%" style="stop-color:rgba(14,16,20, .4);stop-opacity:1")
			stop(offset="100%" style="stop-color:rgba(91,79,229, .4);stop-opacity:1")
		linearGradient(id="strip7" x1="0%" y1="19%" x2="100%" y2="81%")
			stop(offset="0%" style="stop-color:rgba(14,16,20, .4);stop-opacity:1")
			stop(offset="64%" style="stop-color:rgba(91,79,229, .4);stop-opacity:1")
			stop(offset="100%" style="stop-color:rgba(91,79,229, .4);stop-opacity:1")
	#app.wrapper
		+header()
		+slider()
		+navigation()
		+footer()
	+preloader()
	script(src="./js/main.js")